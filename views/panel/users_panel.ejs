        <div class="main-content">
            <!-- header area start -->
            <div class="header-area">
                <div class="row align-items-center">
                    <!-- nav and search button -->
                    <div class="col-md-6 col-sm-8 clearfix">
                        <div class="nav-btn pull-left">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                        <div class="search-box pull-left">
                            <form action="#">
                                <input type="text" name="search" placeholder="Search..." required>
                                <i class="ti-search"></i>
                            </form>
                        </div>
                    </div>
                    <!-- profile info & task notification -->
                    <%- include ./includes/infoblock.ejs %> 
                </div>
            </div>
            <!-- header area end -->
            <!-- page title area start -->
            <div class="page-title-area">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <div class="breadcrumbs-area clearfix">
                            <h4 class="page-title pull-left">Пользователи</h4>
                            <ul class="breadcrumbs pull-left">
                                <li><a href="/">Lady & Man clotring store</a></li>
                                <li><span>Пользователи</span></li>
                            </ul>
                        </div>
                    </div>
                    <%- include ./includes/user.ejs %> 
                </div>
            </div>
            <!-- page title area end -->
            <div class="main-content-inner">
                <div class="row">
                    <div class="col-12 mt-2">
                        <div class="card">
                            <div class="preloaderBlock" style="display: none;">
                                <div class="loader"></div>
                            </div>
                            <div class="card-body">
                                <h4 class="header-title">Список пользователей</h4>
                                <div class="data-tables datatable-dark">
                                    <table id="dataTable3" class="text-center">
                                        <thead class="text-capitalize">
                                            <tr>
                                                <th>№</th>
                                                <th>Ник</th>
                                                <th>email</th>
                                                <th>Номер</th>                            
                                                <th>LM_COIN</th>
                                                <th>Должность</th>
                                                <th>Действия</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i = 0; i < userData.length; i++){ %>
                                            <tr>
                                                <td><%= userData[i].AI %></td>
                                                <td><%= userData[i].nick %></td>
                                                <td><%= userData[i].email %></td>
                                                <td><%= userData[i].phone_number %></td>
                                                <td><%= userData[i].LM_COIN %></td>
                                                <td><%= userData[i].isAdmin %> <% if(userData[i].isAdmin){ %> <div class="official"></div> <% } %></td>
                                                <td>
                                                    <button type="button" class="btn btn-danger btn-xs mb-3" onclick="USER.block('<%= userData[i].AI %>')">Заблокировать</button>
                                                    <button type="button" class="btn btn-warning btn-xs mb-3" onclick="USER.edit('<%= userData[i].AI %>')">Редактировать</button>
                                                    <button type="button" class="btn btn-primary btn-xs mb-3" onclick="USER.setadmin('<%= userData[i].AI %>')">Назначить администратором</button>
                                                    <button type="button" class="btn btn-dark btn-xs mb-3" onclick="USER.delete('<%= userData[i].AI %>')">Удалить</button>
                                                </td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main content area end -->
        <!-- footer area start-->
        <%- include ./includes/footer.ejs %>
        <!-- footer area end-->
    </div>
